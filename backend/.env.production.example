# BTP Connect v9.3.0 Backend - Configuration
# ⚠️ COPIER CE FICHIER VERS .env ET MODIFIER LES VALEURS

# Database (MySQL/MariaDB)
DATABASE_URL="mysql://btpuser:VOTRE_MOT_DE_PASSE@localhost:3306/btp_connect"

# JWT Configuration (GÉNÉRER DES SECRETS ALÉATOIRES!)
# Commande: openssl rand -base64 32
JWT_ACCESS_SECRET="REMPLACER_PAR_SECRET_ALEATOIRE_32_CHARS_MIN"
JWT_REFRESH_SECRET="REMPLACER_PAR_AUTRE_SECRET_ALEATOIRE_32_CHARS"
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL="7d"

# Server Configuration
PORT=8001
HOST=0.0.0.0
NODE_ENV=production

# CORS - Domaines autorisés (séparés par virgules)
CORS_ORIGIN=http://localhost:8001,http://127.0.0.1:8001

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-application
SMTP_FROM=BTP Connect <noreply@votredomaine.fr>

# Auth Bypass (TOUJOURS 0 en production!)
AUTH_BYPASS=0
