# BTP Connect Backend - Configuration Template
# Copy this file to .env and adjust values

# Database (SQLite - fichier local)
DATABASE_URL="file:./data/btp-connect.db"

# JWT Configuration
JWT_ACCESS_SECRET="CHANGE_ME_IN_PRODUCTION_32_CHARS_MIN"
JWT_REFRESH_SECRET="CHANGE_ME_IN_PRODUCTION_32_CHARS_MIN"
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL="7d"

# Server Configuration
PORT=3000
HOST=127.0.0.1

# Auth Bypass (set to 1 for testing, 0 for production)
AUTH_BYPASS=0

# CORS (optionnel - pour mode cloud)
# CORS_ORIGIN=https://your-frontend.com
